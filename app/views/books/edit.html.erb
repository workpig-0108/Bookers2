<div class=body>
	<div class=container>
		<% if @book.errors.any? %>
			 <div id="error_explanation">
		      <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
				    <ul>
				      <% @book.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				    </ul>
				  </div>
		<% end %>
		<div class=row>
			<h2>Editing Book</h2>
		</div>
				<%= form_for(@book) do |f| %>
					<div class="field row">
						<h4>title</h4>
							<%= f.text_field :title %>
					</div>

					<div class="field row">
						<h4>opinion</h4>
							<%= f.text_area :body %>
					</div>

					<div class="actions row">
						<%= f.submit 'Update Book' %>
					</div>
				<% end %>
			<%= link_to 'Show', book_path %> | <%= link_to 'Back', books_path %>

	</div>
</div>