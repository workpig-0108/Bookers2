<div class="container">
 <div class='row'>
    <div class='col-xs-3'>
        <%= render 'users/intro', user: @user, book: @book %>
    </div>

<div class='col-xs-9'>
  <h2>Books</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
         <th style="border:none;"></th>
         <th style="border:none;">Title</th>
         <th style="border:none;">Opinion</th>
         <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
         <% @books.each do |book| %>
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
          </td>
          <td>
           <%=link_to book.title, book_path(book) %>
          </td>
          <td>
           <%= book.body %>
          </td>
        </tr>
          <% end %>
      </div>
    </div>
</div>

