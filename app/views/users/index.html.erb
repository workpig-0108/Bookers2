<div class="container">
<div class='row'>
  <div class='col-xs-3'>
        <%= render 'users/intro', user: @user, book: @book %>
      </div>
      <div class='col-xs-9'>
            <h2>Users</h2>
            <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                  <th style="border:none;">image</th>
                  <th style="border:none;">name</th>
                  <th style="border:none;"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @users.each do |user| %>
                    <td>
                      <%= attachment_image_tag user, :profile_image, :fill, 60, 60,class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                        <%= link_to 'Show', user_path(user) %>
                    </td>
                    <td>
                          <div class="stats">
                            <a href="<%= following_user_path(@user) %>">
                              フォロー数:
                              <strong id="following" class="stat">
                                <%= user.following_user.count %>
                              </strong>
                            </a>
                            <a href="<%= followers_user_path(@user) %>">
                              フォロワー数:
                              <strong id="followers" class="stat">
                                <%= user.follower_user.count %>
                              </strong>
                            </a>
                          </div>
                    </td>
                </tr>
                  <% end %>
                  <% unless current_user?(@user) %>
                    <div id="follow_form">
                    <% if current_user.following?(@user) %>
                      
                    <% else %>
                      
                    <% end %>
                    </div>
                  <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>


